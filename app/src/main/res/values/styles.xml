<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/black</item>
        <!--<item name="android:navigationBarColor" tools:ignore="NewApi">@color/colorPrimaryDark</item>-->
    </style>

    <style name="AppAlertDialog" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:windowTitleStyle">@style/TitleDialogTextStyle</item>
    </style>

    <style name="TitleDialogTextStyle" parent="@style/Base.DialogWindowTitle.AppCompat">
        <item name="android:textColor">@color/purple_200</item>
    </style>

    <style name="gallery_tool_text_style">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gallery_ok_button_normal</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/gallery_footer_count_button_padding</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="text_lib_tool_button_style">
        <item name="android:background">@drawable/text_lib_toolbar_button_selector</item>
        <item name="android:paddingTop">15.0dip</item>
        <item name="android:paddingBottom">15.0dip</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="canvas_text_toolbar_button_style">
        <item name="android:textSize">@dimen/canvas_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="header_button_style">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="effect_header_button_style">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:onClick">myClickHandler</item>
    </style>

    <style name="effect_footer_imagebutton_style">
        <item name="android:textSize">@dimen/lib_effect_footer_button_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:background">@drawable/ok_white</item>
        <item name="android:paddingTop">@dimen/lib_footer_button_padding</item>
        <item name="android:paddingBottom">@dimen/lib_footer_button_padding</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@dimen/lib_button_style_min_width</item>
        <item name="android:minHeight">@dimen/lib_button_style_min_height</item>
        <item name="android:drawablePadding">@dimen/lib_footer_button_drawable_padding</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:onClick">myClickHandler</item>
    </style>

    <style name="ratio_button_style">
        <item name="android:textSize">@dimen/ratio_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">@dimen/ratio_button_width</item>
        <item name="android:layout_height">@dimen/ratio_button_height</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="collage_footer_imagebutton_style">
        <item name="android:textSize">@dimen/collage_footer_button_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center</item>
        <item name="drawableTint">@color/black</item>
        <item name="android:background">@drawable/collage_footer_button</item>
        <item name="android:paddingTop">@dimen/collage_footer_button_padding</item>
        <item name="android:paddingBottom">@dimen/collage_footer_button_padding</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:minWidth">@dimen/collage_context_button_style_min_width</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:onClick">myClickHandler</item>
    </style>

    <style name="collage_ratio_button_style">
        <item name="android:textSize">@dimen/collage_ratio_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_collage_ratio_button</item>
        <item name="android:padding">12.0dip</item>
        <item name="android:layout_width">@dimen/collage_ratio_button_width</item>
        <item name="android:layout_height">@dimen/collage_ratio_button_height</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:onClick">myClickHandler</item>
    </style>
    <style name="collage_ratio_button_style1">
        <item name="android:textSize">@dimen/collage_ratio_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/ok_white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12.0dip</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="square_footer_imagebutton_style">
        <item name="android:textSize">@dimen/square_footer_button_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#ffccc7c6</item>
        <item name="android:gravity">bottom|center</item>
        <item name="android:background">@drawable/square_footer_button</item>
        <item name="android:paddingTop">@dimen/square_footer_button_padding</item>
        <item name="android:paddingBottom">@dimen/square_footer_button_padding</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:onClick">myClickHandler</item>
    </style>
    <style name="AppTheme.AdAttribution">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:background">#FFEB3B</item>
        <item name="android:textColor">#E91E63</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">Ad</item>
        <item name="android:textStyle">bold</item>


    </style>
    <style name="effect_seek_bar_style">
        <item name="android:paddingLeft">18.0dip</item>
        <item name="android:paddingRight">18.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxHeight">12.0dip</item>
        <item name="android:progress">50</item>
        <item name="android:minHeight">12.0dip</item>
    </style>

    <style name="MyAlertDialogStyle" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/purple_200</item>
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="FulScrennDialog">
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>
