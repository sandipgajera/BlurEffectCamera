<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@color/lib_footer_second_bg"
    android:clickable="true"
    android:onClick="myClickHandler"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/filter_image"
        android:layout_width="@dimen/lib_view_item_image_size"
        android:layout_height="@dimen/lib_view_item_image_size"
        android:layout_alignParentTop="true"
        android:background="#00000000"
        android:padding="@dimen/lib_view_item_padding"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/pro_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/filter_image"
        android:background="#00000000" />

</RelativeLayout>