<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffcdd1d1"
    android:clickable="true"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/pattern_online_header"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:background="#ff111111"
        android:gravity="center_vertical"
        android:minHeight="@dimen/abc_action_bar_default_height_material"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/button_pattern_online_back"
            android:layout_width="50.0dip"
            android:layout_height="50.0dip"
            android:layout_marginLeft="10.0dip"
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true"
            android:padding="10.0dip"
            android:src="@drawable/ic_arrow_back" />

        <TextView
            android:id="@+id/text_view_name_pattern_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21.0dip"
            android:text="@string/pattern_manage"
            android:textColor="#ffffffff"
            android:textSize="21.0sp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/pattern_online_header"
        android:scrollbars="vertical" />

</RelativeLayout>